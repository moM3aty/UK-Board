<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="The UK Board For Learning and Training - Empowering students with knowledge, confidence, and excellence.">
    <meta name="keywords" content="The UK Board For Learning and Training, education, learning, university, courses">
    <meta name="author" content="The UK Board For Learning and Training">
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="shortcut icon" href="~/images/logo.png" type="image/x-icon">
    <script type="application/ld+json">
        {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "The UK Board For Learning and Training",
        "url": "https://yourdomain.com",
        "logo": "https://yourdomain.com/images/logo.png"
        }
    </script>
    <title>@ViewData["Title"] - The UK Board</title>
</head>
<body data-bs-spy="scroll" data-bs-target="#navbarNav" data-bs-offset="100" tabindex="0">
    <nav class="navbar navbar-expand-lg bg-white sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center g-2" asp-controller="Home" asp-action="Index"
               aria-label="The UK Board For Learning and Training logo">
                <img src="~/images/logo.png" alt="Logo" height="60">
                <span>The UK Board For Learning and Training</span>
            </a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-label="Toggle navigation" aria-expanded="false">
                <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav ms-auto d-flex gap-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="home"
                           aria-label="The UK Board For Learning and Training home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="about"
                           aria-label="The UK Board For Learning and Training about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="majors"
                           aria-label="The UK Board For Learning and Training services">Majors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Agencies"
                           aria-label="The UK Board For Learning and Training agencies">Agencies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Certificates"
                           aria-label="The UK Board For Learning and Training certificates">Certificates</a>
                    </li>
                    <li class="nav-item">
                        <a aria-label="Blog" asp-controller="Home" asp-action="Blog" class="nav-link">Blog</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row gy-4">
                <div class="col-md-6">
                    <h2 class="h3">The UK Board For Learning and Training</h2>
                    <p class="text-white-50">Believe in yourself and you will be unstoppable</p>
                </div>
                <div class="col-md-6">
                    <h2 class="h5 fw-bold mb-3">COMPANY INFO</h2>
                    <ul class="list-unstyled d-lg-flex flex-wrap gap-3">
                        <li class="mb-3 mb-lg-0"><a asp-controller="Home" asp-action="Index" asp-fragment="home" aria-label="home" class="text-decoration-none">Home</a></li>
                        <li class="mb-3 mb-lg-0"><a asp-controller="Home" asp-action="Index" asp-fragment="about" aria-label="about" class="text-decoration-none">About Us</a></li>
                        <li class="mb-3 mb-lg-0">
                            <a asp-controller="Home" asp-action="Index" asp-fragment="majors" aria-label="services" class="text-decoration-none">Major</a>
                        </li>
                        <li class="mb-3 mb-lg-0">
                            <a asp-controller="Home" asp-action="Agencies" aria-label="agencies"
                               class="text-decoration-none">Agencies</a>
                        </li>
                        <li class="mb-3 mb-lg-0">
                            <a asp-controller="Home" asp-action="Certificates" aria-label="certificates"
                               class="text-decoration-none">Certificates</a>
                        </li>
                        <li class="mb-3 mb-lg-0"><a aria-label="Blog" asp-controller="Home" asp-action="Blog" class="text-decoration-none">Blog</a></li>

                    </ul>
                </div>

            </div>
            <hr class="my-4 border-light">
            <div class="text-center small text-white-50">
                Copyright © 2025 The UK Board For Learning and Training. All Rights Reserved.
            </div>
            <div class="text-center small text-white-50 mt-4">
                Made with <a aria-label="gwt facebook"
                             href="https://www.facebook.com/profile.php?id=100090592885243&mibextid=ZbWKwL" class="gwt">GMT</a> Company
            </div>
        </div>
    </footer>
    <button id="backToTop" class="back-to-top" aria-label="العودة إلى الأعلى" aria-expanded="false">
        <i class="fas fa-arrow-up" aria-hidden="true"></i>
    </button>
    <div class="fixed-contact-buttons">
        <a href="https://mail.google.com/mail/?view=cm&fs=1&to=info@yourdomain.com" target="_blank" class="email-button"
           aria-label="Send Email">
            <i class="fas fa-envelope"></i>
        </a>
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

