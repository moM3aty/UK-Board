            <h2 class="text-center mb-2 title fst-italic">Certificates</h2>
            <p class="text-muted text-center">Please enter your Certificate ID to verify.</p>

            <div class="row g-4 justify-content-center">
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <form id="searchForm" class="mt-3" onsubmit="return false;">
                        <div>
                            <input type="search" placeholder="Enter Certificate ID" class="search-input" id="searchInput" autocomplete="off">
                        </div>
                    </form>
                </div>
            </div>

            <div class="row g-4 mt-5 justify-content-center">
                <div class="col-lg-8">
                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center" style="display: none;">
                        <div class="spinner-border text-danger" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <!-- Result Display -->
                    <div id="certificateDisplay" class="text-center">
                        <!-- This is where the secure image or error message will be injected by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </section>
