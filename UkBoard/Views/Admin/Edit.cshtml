@model UkBoard.Models.CertificateViewModel

@{
    ViewData["Title"] = "Edit Certificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="admin-card form-card">
            <h4 class="mb-4">Edit Certificate: @Model.CertificateId</h4>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- حقول مخفية لحفظ الـ ID ومسار الصورة القديمة -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ExistingImagePath" />

                <div class="form-group mb-3">
                    <label asp-for="CertificateId" class="form-label"></label>
                    <input asp-for="CertificateId" class="form-control" />
                    <span asp-validation-for="CertificateId" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CertificateImage" class="form-label">Upload New Image (Optional)</label>
                    <input asp-for="CertificateImage" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="CertificateImage" class="text-danger small"></span>
                    <small class="form-text text-muted">Only upload if you want to replace the existing image.</small>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Current Image</label>
                    <div>
                        <img width="100%" src="~/@Model.ExistingImagePath" class="current-image-preview" alt="Current Certificate" />
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-save">Save Changes</button>
                    <a asp-action="Index" class="btn btn-back">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
